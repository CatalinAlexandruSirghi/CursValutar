<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CursValutar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CursValutar"
    xmlns:views="clr-namespace:CursValutar.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CursValutar">

    <ShellContent
        Title="Curs valutar"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Convertor valutar"
        ContentTemplate="{DataTemplate views:ConvertorPage}"
        Route="ConvertorPage" />
    <ShellContent
        Title="Istoric curs"
        ContentTemplate="{DataTemplate views:IstoricPage}"
        Route="IstoricPage" />
    <ShellContent
        Title="Setari"
        ContentTemplate="{DataTemplate views:SetariPage}"
        Route="SetariPage" />
    <ShellContent
        Title="Despre aplicatie"
        ContentTemplate="{DataTemplate views:DesprePage}"
        Route="DesprePage" />

</Shell>
