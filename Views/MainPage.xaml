<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursValutar.Views.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Setari" Order="Secondary" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>


    <StackLayout 
            Padding="30,0"
            Spacing="25">

        <Label
                Text="Hello, World!" />

        <ListView x:Name="ListViewCurs">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Spacing="10">
                            <Image Source="{Binding ResursaDrapel}"/>
                            <Label Text="{Binding Multiplicator}"/>
                            <Label Text="{Binding Valuta, StringFormat='{0} ='}" />
                            <Label Text="{Binding Valoare, StringFormat='{0} RON'}"/>
                        </HorizontalStackLayout>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>


</ContentPage>
