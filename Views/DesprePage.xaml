<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursValutar.Views.DesprePage"
             Title="Despre aplicatie">
    <VerticalStackLayout Spacing="50" VerticalOptions="Center">
        <!--
            Label -> titlul aplicatiei Curs Valutar 1.0
            Image -> logo-ul aplicatiei -> fisier (png) in directorul Resources/Images
            Label -> autorul aplicatiei
        -->
        <Label 
            Text="Curs Valutar 1.0"
            VerticalOptions="Start" 
            HorizontalOptions="Center" 
            FontSize="Header"/>

        <Image
            Source="logo.png"
            HeightRequest="185"
            Aspect="AspectFit"  
            SemanticProperties.Description="logo curs valutar" />

        <Label 
            Text="Autor: Catalin-Alexandru"
            VerticalOptions="End" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>